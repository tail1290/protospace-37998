<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= @user.name %>さんの情報
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= @user.profile %></td>
          </tr>
          <tr>
            <th class="table__col1">所属</th>
            <td class="table__col2"><%= @user.occupation %></td>
          </tr>
          <tr>
            <th class="table__col1">役職</th>
            <td class="table__col2"><%= @user.position %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= @user.name%>さんのプロトタイプ
      </h2>
      <div class="user__card">
        <% @prototypes.each do |prototype|%>
            <div class="card">
              <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.user_id)%>
              <div class="card__body">
                <%= link_to prototype.title, prototype_path(prototype.id), class: :card__title%>
                <p class="card__summary">
                  <%= prototype.catch_copy %>
                </p>
                <%= link_to prototype.user.name, user_path(prototype.user_id), class: :card__user %>
              </div>
            </div>
        <% end %>
        <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
      </div>
      <% @comments.each do |comment| %>
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
        <li class="comments_list">
          <%=  comment.content%>
          <%= link_to comment.user.name, "/users/#{comment.user_id}",class: :comment_user %>
          <%# <%= " コメントのテキスト "%>
          <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
        </li>
      <% end %>
    </div>
  </div>
</div>